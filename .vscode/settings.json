{
  // Vitest Configuration for UI Module
  "vitest.enable": true,
  // Point to the vitest config in the ui directory (relative path from workspace root)
  "vitest.rootConfig": "ui/vitest.config.ts",
  // The Vitest extension's worker process requires Node.js for WebSocket communication
  // However, you can still run tests manually with Bun using: bun run test
  "vitest.nodeExecutable": "C:\\Program Files\\nodejs\\node.exe",
  // Test file patterns
  "vitest.include": [
    "ui/src/**/*.test.{ts,tsx}"
  ],
  "vitest.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.{idea,git,cache,output,temp}/**"
  ],
  // Environment variables
  "vitest.nodeEnv": {},
  // Enable test code lens (run/debug buttons above tests)
  "vitest.codeLens": true,
  // Show test status in editor
  "vitest.showFailMessages": true,
  // Enable coverage display in editor
  "vitest.coverage": {
    "enabled": true
  },
  // Coverage Gutters extension settings (if installed)
  "coverage-gutters.showGutterCoverage": true,
  "coverage-gutters.showLineCoverage": true,
  "coverage-gutters.showRulerCoverage": true,
  "coverage-gutters.lcovname": "lcov.info",
  "coverage-gutters.coverageFileNames": [
    "lcov.info",
    "coverage/lcov.info",
    "ui/coverage/lcov.info"
  ]
}
  